<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.inu.cafeteria.feature.order.CafeteriaSelectionView" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/mid_space"
        android:layout_marginVertical="@dimen/close_space"
        app:cardCornerRadius="12dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:backgroundTint="?android:attr/textColorPrimaryInverse">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mid_space"
            android:layout_marginVertical="@dimen/near_space"
            android:text="@{item.displayName}"
            android:textColor="?android:attr/colorPrimary"
            tools:text="학생식당" />

    </androidx.cardview.widget.CardView>
</layout>