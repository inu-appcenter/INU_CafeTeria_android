<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/cafeteria_vertical_margin"
    android:layout_marginBottom="@dimen/cafeteria_vertical_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/cafeteria_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/cafeteria_horizontal_margin"
        android:textStyle="bold"
        android:textSize="@dimen/textTitle"
        android:textColor="#000"
        tools:text="Section A" />

    <ImageButton
        android:id="@+id/more_button"
        android:contentDescription="@string/desc_more_button"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="@dimen/cafeteria_horizontal_margin"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toTopOf="@id/cafeteria_name"
        app:layout_constraintBottom_toBottomOf="@id/cafeteria_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_arrow_forward_24px"
        android:background="?android:attr/selectableItemBackground"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menu_page_recycler"
        android:nestedScrollingEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/element_margin"
        android:paddingStart="@dimen/cafeteria_menu_page_horizontal_padding"
        android:paddingEnd="@dimen/cafeteria_menu_page_horizontal_padding"
        app:layout_constraintTop_toBottomOf="@id/cafeteria_name"
        android:clipToPadding="false"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/menu_page" />

    <include
        layout="@layout/empty_cafeteria_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/element_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cafeteria_name"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>