<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="vm"
            type="com.inu.cafeteria.feature.discount.DiscountViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Carrot! -->
        <ImageView
            android:id="@+id/carrot"
            android:layout_width="@dimen/available_time_view_size"
            android:layout_height="@dimen/available_time_view_size"
            android:layout_gravity="center"
            android:src="@drawable/carrot"
            android:contentDescription="@string/desc_help"
            android:visibility="@{vm.barcodeCardReady ? View.VISIBLE : View.GONE}"
            tools:visibility="gone" />

        <!-- Barcode card wrapper -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior=".common.widget.OverScrollBounceBehavior"
            android:visibility="@{vm.barcodeCardReady ? View.VISIBLE : View.GONE}"
            tools:visibility="gone">

            <!-- Content Wrapper -->
            <include
                vm="@{vm}"
                layout="@layout/barcode_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="48dp" />

        </androidx.core.widget.NestedScrollView>

        <!-- Login prompt view -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{vm.barcodeCardReady ? View.GONE : View.VISIBLE}"
            tools:visibility="visible">

            <!-- Prompt title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/far_space"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/subtitle"
                android:text="@string/login_prompt_title"
                android:textSize="@dimen/textBig"
                android:textColor="@color/textPrimary"
                android:textStyle="bold"/>

            <!-- Prompt subtitle -->
            <TextView
                android:id="@+id/subtitle"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/far_space"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/login_button"
                android:text="@string/login_prompt_subtitle"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textSecondary"/>

            <!-- Login button -->
            <Button
                style="@style/HorizontallyFullSizedViewConstrained"
                android:id="@+id/login_button"
                android:layout_margin="@dimen/near_space"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="?android:attr/textColorPrimaryInverse"
                android:backgroundTint="?android:attr/colorPrimary"
                android:text="@string/button_login"
                android:onClick="@{v -> vm.onClickLogin()}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>

