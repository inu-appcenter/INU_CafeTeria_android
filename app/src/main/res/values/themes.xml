<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppThemeLight"/>

    <!-- Light theme -->
    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:divider">@color/separatorLight</item>
        <item name="android:windowBackground">@color/backgroundLight</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:textColorTertiary">@color/textTertiary</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/backgroundLight</item>

        <item name="colorPrimary">@color/themeBlue</item>
        <item name="colorAccent">@color/themeBlue</item>
        <item name="selectableItemBackground">@drawable/ripple</item>

        <item name="barBackground">@color/backgroundLight</item>
        <item name="barTextColor">@color/textSecondary</item>
        <item name="barSelectedTextColor">@drawable/bar_item_color</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <!-- Splash theme -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/themeBlue</item>
    </style>

    <!-- Transparent theme -->
    <style name="Transparent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Bottom sheet theme -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

</resources>